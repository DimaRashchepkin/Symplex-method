<Window x:Class="Symplex_method.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Symplex_method"
		mc:Ignorable="d"
		Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2" Height="36" VerticalAlignment="Center" HorizontalAlignment="Center" Width="1280">
            <Separator />
            <MenuItem x:Name="FileMenuItem" VerticalAlignment="Center" Header="Файл" FontSize="18" HorizontalAlignment="Center" Height="34" Margin="0,1,0,0">
                <MenuItem x:Name="OpenMenuItem" Header="Открыть..." Click="OpenMenuItem_Click"/>
                <MenuItem x:Name="SaveMenuItem" Header="Сохранить..."  Click="SaveMenuItem_Click"/>
            </MenuItem>
            <Separator />
            <MenuItem x:Name="HelpMenuItem" FontSize="18" Header="Справка" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" Margin="0,1,0,0"/>
            <Separator />
        </Menu>
        <StackPanel x:Name="ButtonsStackPanel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="172" Height="600">
            <Button x:Name="ConditionsButton" Content="Условия задачи" FontSize="16" Height="30" Margin="0,1,0,1" Click="ConditionsButton_Click" Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"/>
            <Separator />
            <Button x:Name="SymplexMethodButton" Content="Симплекс-метод" FontSize="16" Height="30" Margin="0,1,0,1" Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" Click="SymplexMethodButton_Click"/>
            <Separator />
            <Button x:Name="GraphicButton" Content="Графический метод" FontSize="16" Height="30" Margin="0,1,0,1" Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" Click="GraphicButton_Click"/>
        </StackPanel>
        <ContentPresenter x:Name="OutputView" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
